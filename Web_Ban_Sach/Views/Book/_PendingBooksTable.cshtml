@model List<Web_Ban_Sach.Models.Book>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_PendingBooksTable</title>
</head>
<body>
    <div>
        @if (Model != null && Model.Any())
        {
            <h3>Danh sách sách chờ lưu</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên sách</th>
                        <th>Ngày XB</th>
                        <th>Giá</th>
                        <th>Thể loại</th>
                        <th>Nhà cung cấp</th>
                        <th>Phiên bản</th>
                        <th>Tác Giả</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@item.Name</td>
                            <td>@item.PublicationDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.Price</td>
                            <td>@item.Genre.Name</td>
                            <td>@item.Supplier.Name</td>
                            <td>@item.Editor.EditionNumber</td>
                            <td>@item.TempAuthorName</td>
                        </tr>
                    }
                </tbody>
            </table>

            using (Html.BeginForm("SavePending", "Book", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-success">
                    Lưu vào hệ thống
                </button>
            }
        }
        else
        {
            <p>Chưa có sách nào trong danh sách chờ.</p>
        }

    </div>
</body>
</html>
