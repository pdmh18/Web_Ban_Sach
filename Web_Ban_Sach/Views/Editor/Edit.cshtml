@model Web_Ban_Sach.Models.EditorDto

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sửa Biên Tập</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fb;
        }

        .form-container {
            background: #ffffff;
            border-radius: 18px;
            padding: 40px;
            max-width: 650px;
            margin: 60px auto;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        h2 {
            font-weight: 600;
            color: #0d6efd;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        label {
            font-weight: 500;
        }

        .form-control {
            border-radius: 10px;
            padding: 10px 14px;
        }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            font-weight: 500;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        .back-link {
            display: inline-block;
            margin-top: 15px;
            color: #6c757d;
            text-decoration: none;
        }

            .back-link:hover {
                color: #0d6efd;
                text-decoration: underline;
            }

        .text-danger {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2><i class="fa-solid fa-pen-to-square"></i> Sửa Biên Tập</h2>

        @using (Html.BeginForm("Edit", "Editor", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="mb-3">
                @Html.LabelFor(m => m.EditionNumber, "Số Phiên Bản")
                @Html.TextBoxFor(m => m.EditionNumber, new { @class = "form-control", placeholder = "Nhập số phiên bản" })
                @Html.ValidationMessageFor(m => m.EditionNumber, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Language, "Ngôn Ngữ")
                @Html.TextBoxFor(m => m.Language, new { @class = "form-control", placeholder = "Nhập ngôn ngữ" })
                @Html.ValidationMessageFor(m => m.Language, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Pages, "Số Trang")
                @Html.TextBoxFor(m => m.Pages, new { @class = "form-control", type = "number", placeholder = "Nhập số trang" })
                @Html.ValidationMessageFor(m => m.Pages, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Publisher, "Nhà Xuất Bản")
                @Html.TextBoxFor(m => m.Publisher, new { @class = "form-control", placeholder = "Nhập nhà xuất bản" })
                @Html.ValidationMessageFor(m => m.Publisher, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="fa-solid fa-save me-1"></i> Cập Nhật Biên Tập
            </button>
        }

        <a href="@Url.Action("Index", "Editor")" class="back-link">
            <i class="fa-solid fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
