@model Web_Ban_Sach.Models.SupplierDto

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thêm Nhà Cung Cấp</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fb;
        }

        .form-container {
            background: #ffffff;
            border-radius: 18px;
            padding: 40px;
            max-width: 650px;
            margin: 60px auto;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-weight: 600;
            color: #0d6efd;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        label {
            font-weight: 500;
        }

        .form-control {
            border-radius: 10px;
            padding: 10px 14px;
        }

        textarea.form-control {
            min-height: 90px;
        }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            font-weight: 500;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        .back-link {
            display: inline-block;
            margin-top: 15px;
            color: #6c757d;
            text-decoration: none;
        }

            .back-link:hover {
                color: #0d6efd;
                text-decoration: underline;
            }

        .text-danger {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2><i class="fa-solid fa-truck-field"></i> Thêm Nhà Cung Cấp Mới</h2>

        @using (Html.BeginForm("Create", "Supplier", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="mb-3">
                @Html.LabelFor(m => m.Name, "Tên Nhà Cung Cấp")
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nhập tên nhà cung cấp..." })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.ContactPhone, "Số Điện Thoại")
                @Html.TextBoxFor(m => m.ContactPhone, new { @class = "form-control", placeholder = "Nhập số điện thoại..." })
                @Html.ValidationMessageFor(m => m.ContactPhone, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Address, "Địa Chỉ")
                @Html.TextAreaFor(m => m.Address, new { @class = "form-control", placeholder = "Nhập địa chỉ nhà cung cấp..." })
                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="fa-solid fa-plus"></i> Thêm Nhà Cung Cấp
            </button>
        }

        <a href="@Url.Action("Index", "Supplier")" class="back-link">
            <i class="fa-solid fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
