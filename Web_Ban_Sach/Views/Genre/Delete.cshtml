@model Web_Ban_Sach.Models.Genre

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Xóa Thể Loại</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
            font-family: "Segoe UI", sans-serif;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            border: none;
        }

        h2 {
            font-weight: 600;
            color: #dc3545;
        }

        .book-info {
            background-color: #fff3f3;
            border: 1px solid #f5c2c7;
            border-radius: 10px;
            padding: 15px 20px;
            margin-bottom: 20px;
        }

            .book-info h4 {
                color: #b02a37;
                font-weight: 600;
            }

        .btn {
            border-radius: 8px;
            padding: 10px 20px;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
        }

            .btn-danger:hover {
                background-color: #bb2d3b;
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #5c636a;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="col-md-8 offset-md-2">
            <div class="card p-4">
                <h2><i class="fa-solid fa-trash-can me-2"></i>Xác Nhận Xóa Thể Loại</h2>

                <div class="book-info mt-3">
                    <h4><i class="fa-solid fa-book me-2"></i>@Model.Name</h4>
                    <p><strong>Mô tả:</strong> @Model.Description</p>
                </div>

                <form method="post" action="@Url.Action("Delete", "Genre", new { id = Model.Id })">
                    @Html.AntiForgeryToken()

                    <p class="text-danger mb-4">
                        <i class="fa-solid fa-triangle-exclamation me-2"></i>
                        Bạn có chắc chắn muốn xóa thể loại này không? Hành động này không thể hoàn tác.
                    </p>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="fa-solid fa-trash me-1"></i> Xóa
                        </button>
                        @Html.ActionLink("Hủy", "Index", "Genre", null, new { @class = "btn btn-secondary" })
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
