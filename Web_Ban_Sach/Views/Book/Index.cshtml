@model List<Web_Ban_Sach.Models.Book>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh Sách Sách</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        h2 {
            text-align: center;
            margin: 30px 0;
            font-weight: 600;
            color: #343a40;
        }

        .table thead {
            background-color: #0d6efd;
            color: white;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
            transition: 0.2s ease-in-out;
        }

        .btn-add {
            display: inline-block;
            margin-bottom: 20px;
        }

        .cover-img {
            border-radius: 6px;
            box-shadow: 0 0 5px rgba(0,0,0,0.15);
            object-fit: cover;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 3px 8px rgba(0,0,0,0.1);
        }

        td, th {
            vertical-align: middle !important;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Danh Sách Sách</h2>
            @Html.ActionLink("Thêm sách mới", "Create", "Book", null, new { @class = "btn btn-success btn-lg shadow-sm" })
        </div>

        <table class="table table-bordered table-hover align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên sách</th>
                    <th>Ngày xuất bản</th>
                    <th>Giá</th>
                    <th>Ảnh bìa</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.PublicationDate.ToString("dd/MM/yyyy")</td>
                            <td class="text-danger fw-bold">@String.Format("{0:N0} đ", item.Price)</td>
                            <td>
                                <img src="@Url.Content(item.CoverImageUrl)" class="cover-img" width="120" height="170" alt="Ảnh bìa" />
                            </td>
                            <td>
                                <a href="@Url.Action("Update", new { id = item.Id })" class="btn btn-warning btn-sm me-1">
                                    Sửa
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa sách này không?');">
                                    Xóa
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            Không có sách nào trong danh sách
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
